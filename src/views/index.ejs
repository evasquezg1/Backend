<% include partials/_header %>
	
	<div class="container-fluid">
		<div class="row">
			<!-- FORM -->
			<div class="col-md-3">
				<div class="card">
					<div class="card-body">
						<form action="/add" method="POST">
							<div class="form-group">
								<label>Full Name</label>
								<input type="text" name="fullName" placeholder="Insert a Full Name" class="form-control">
							</div>
							<div class="form-group">
								<label>City</label>
								<select name="city" class="form-control">
									<option value="Cartagena">Cartagena</option>
									<option value="Barranquilla">Barranquilla</option>
								</select>
							</div>
							<div class="form-group">
								<label>Address</label>
								<input type="text" name="address" class="form-control">
							</div>
							<button type="submit" class="btn btn-primary">
								<i class="fa fa-save"></i>
							</button>
						</form>
					</div>
				</div>
			</div>
			<!-- List -->
			<div class="col-md-9">
				<table class="table table-bordered table-hover">
					<thead>
						<tr>
							<th>NÂ°</th>
							<th>Full Name</th>
							<th>City</th>
							<th>Address</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>
						<% for(var i = 0; i < tasks.length; i++) { %>
							<tr>
								<td><%= i + 1 %></td>
								<td><%= tasks[i].fullName %></td>
								<td><%= tasks[i].city %></td>
								<td><%= tasks[i].address %></td>
								<td>
									<a href="/change/<%= tasks[i]._id %>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>"><i class="fa fa-check"></i></a>
									<a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a>
									<a href="/edit/<%= tasks[i]._id %>" class="btn btn-info"><i class="fa fa-edit"></i></a>
								</td>
							</tr>
						<% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

<% include partials/_footer %>
